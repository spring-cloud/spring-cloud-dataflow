		<asciidoctorj-pdf.version>1.5.0-alpha.16</asciidoctorj-pdf.version>
		<maven-antrun-plugin.version>1.8</maven-antrun-plugin.version>
		<ant-contrib.version>1.0b3</ant-contrib.version>
		<ant-nodeps.version>1.8.1</ant-nodeps.version>
		<antelopetasks.version>3.2.10</antelopetasks.version>
		<build-helper-maven-plugin>1.9.1</build-helper-maven-plugin>
	</properties>

	<modules>
		<module>spring-cloud-skipper-server-core</module>
		<module>spring-cloud-skipper-server</module>
		<module>spring-cloud-skipper</module>
		<module>spring-cloud-skipper-shell</module>
		<module>spring-cloud-skipper-shell-commands</module>
		<module>spring-cloud-skipper-client</module>
		<module>spring-cloud-skipper-docs</module>
		<module>spring-cloud-skipper-platform-cloudfoundry</module>
		<module>spring-cloud-skipper-platform-kubernetes</module>
		<module>spring-cloud-skipper-autoconfigure</module>
		<module>spring-cloud-skipper-dependencies</module>
		<module>spring-cloud-starter-skipper-server</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.cloud</groupId>
				<artifactId>spring-cloud-dependencies</artifactId>
				<version>${spring-cloud.version}</version>
				<type>pom</type>
